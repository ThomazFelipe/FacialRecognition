<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@color/colorPrimary"
    tools:context="bests.pi.facialrecognition.Resources.HomeScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:layout_weight="1.99999"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:layout_weight="2"
                android:layout_marginRight="15dp"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:text="@string/language"/>
            <Button
                android:id="@+id/buttonTheme"
                android:background="@drawable/bra"
                android:layout_width="30dp"
                android:layout_gravity="right"
                android:layout_height="30dp"
                android:layout_weight="0.5"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:layout_weight="2"
                android:layout_marginRight="15dp"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:text="@string/language"/>
            <Button
                android:id="@+id/buttonLanguage"
                android:background="@drawable/bra"
                android:layout_width="30dp"
                android:layout_gravity="right"
                android:layout_height="30dp"
                android:layout_weight="0.5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:layout_weight="1.99999"
            android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_fsociety"/>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_weight="0.001"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/buttonDoLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:text="@string/login"
            android:layout_gravity="bottom"
            android:textColor="@android:color/white"
            android:textSize="17sp" />
        <Button
            android:id="@+id/buttonRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/accent"
            android:text="@string/sign_up"
            android:textColor="@android:color/white"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>
